{% extends 'base.html.twig' %}

{% block title %}{% trans %}list.machines.show.title{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}list.machines.show.title{% endtrans %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{% trans %}list.id{% endtrans %}</th>
                <td>{{ machine.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}list.machines.name{% endtrans %}</th>
                <td>{{ machine.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('machines_index') }}">
        {% trans %}form.back{% endtrans %}
    </a>

    <a class="btn btn-outline-primary" href="{{ path('machines_edit', {'id': machine.id}) }}">
        {% trans %}list.edit{% endtrans %}
    </a>

    {{ include('machines/_delete_form.html.twig') }}
{% endblock %}

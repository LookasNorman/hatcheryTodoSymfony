{% extends 'base.html.twig' %}

{% block title %}{% trans %}list.complaints.show.title{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}list.complaints.show.title{% endtrans %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{% trans %}list.id{% endtrans %}</th>
                <td>{{ complaint.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}list.complaints.partName{% endtrans %}</th>
                <td>{{ complaint.partName }}</td>
            </tr>
            <tr>
                <th>{% trans %}list.complaints.supplier{% endtrans %}</th>
                <td>{{ complaint.supplier }}</td>
            </tr>
            <tr>
                <th>{% trans %}list.complaints.description{% endtrans %}</th>
                <td>{{ complaint.description }}</td>
            </tr>
            <tr>
                <th>{% trans %}list.complaints.filingDate{% endtrans %}</th>
                <td>{{ complaint.filingDate ? complaint.filingDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>{% trans %}list.complaints.removalDate{% endtrans %}</th>
                <td>{{ complaint.removalDate ? complaint.removalDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('complaints_index') }}">
        {% trans %}form.back{% endtrans %}
    </a>

    <a class="btn btn-outline-primary" href="{{ path('complaints_edit', {'id': complaint.id}) }}">
        {% trans %}form.edit{% endtrans %}
    </a>

    {{ include('complaints/_delete_form.html.twig') }}
{% endblock %}

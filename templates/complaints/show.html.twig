{% extends 'base.html.twig' %}

{% block title %}Complaints{% endblock %}

{% block body %}
    <h1>Complaints</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ complaint.id }}</td>
            </tr>
            <tr>
                <th>PartName</th>
                <td>{{ complaint.partName }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ complaint.description }}</td>
            </tr>
            <tr>
                <th>FilingDate</th>
                <td>{{ complaint.filingDate ? complaint.filingDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>RemovalDate</th>
                <td>{{ complaint.removalDate ? complaint.removalDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('complaints_index') }}">back to list</a>

    <a href="{{ path('complaints_edit', {'id': complaint.id}) }}">edit</a>

    {{ include('complaints/_delete_form.html.twig') }}
{% endblock %}

<form method="post" action="{{ path('complaints_delete', {'id': complaint.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ complaint.id) }}">
    <button class="btn btn-danger">{% trans %}form.delete{% endtrans %}</button>
</form>

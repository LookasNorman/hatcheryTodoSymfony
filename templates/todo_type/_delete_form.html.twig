<form method="post" action="{{ path('todo_type_delete', {'id': todo_type.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ todo_type.id) }}">
    <button class="btn btn-danger">{% trans %}form.delete{% endtrans %}</button>
</form>

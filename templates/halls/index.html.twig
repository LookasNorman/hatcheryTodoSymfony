{% extends 'base.html.twig' %}

{% block title %}Halls index{% endblock %}

{% block body %}
    <h1>Halls index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hall in halls %}
            <tr>
                <td>{{ hall.id }}</td>
                <td>{{ hall.name }}</td>
                <td>{{ hall.description }}</td>
                <td>
                    <a href="{{ path('halls_show', {'id': hall.id}) }}">show</a>
                    <a href="{{ path('halls_edit', {'id': hall.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('halls_new') }}">Create new</a>
{% endblock %}

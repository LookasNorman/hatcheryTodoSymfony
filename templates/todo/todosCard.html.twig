{% block body %}
    <div class="example-wrapper">
        {% if app.user %}
        {% if todos %}
            {% for todo in todos %}
                <div class="bg-light">
                    <h6 class="text-center"><a href="{{ path('todo_show', {'id': todo.id}) }}">{{todo.title}}</a></h6>
                    <p>
                        <span class="badge badge-secondary">{{ todo.objectAddress.name}}</span>
                        <span class="badge badge-secondary">{{ todo.date | date('Y-m-d')}}</span>
                    </p>
                </div>
            {% endfor %}
            {% else %}
                <p class="bg-success text-white">Brak zada≈Ñ</p>
            {% endif %}
            {% endif %}
        </div>
{% endblock %}
